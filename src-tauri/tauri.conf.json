{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sonosano",
  "version": "0.3.2",
  "identifier": "com.sonosano.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sonosano",
        "width": 900,
        "height": 670,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com; img-src 'self' data: res: https: http:; media-src 'self' http:; connect-src 'self' http: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../assets/icons/32x32.png",
      "../assets/icons/128x128.png",
      "../assets/icons/256x256.png",
      "../assets/icon.icns",
      "../assets/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
